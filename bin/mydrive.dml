package pt.tecnico.MyDrive.domain;

class MyDrive {
    Integer counter;
}

class User {
    String username;
    String password;
    String name;
    String mask;
    String homeDir;
}

class SuperUser extends User;

class File {
    Integer id;
    String owner;
    String name;
    DateTime lastModif;
    String permissions;
    String path;
}


class PlainFile extends File{
    String data;
}


class Directory extends File{
    Integer dimension;
    String filename;
}

class Link extends PlainFile;

class App extends PlainFile{
    String appData;
}

relation UserOwnsFile{
    User playsRole user{
    multiplicity 1..*;}
    File playsRole file{
    multiplicity *;}
}

relation DirectoryContainsFile{
    Directory playsRole directory{
    multiplicity 2..*;}
    File playsRole file{
    multiplicity *;}
}


relation MyDriveContainsUser{
    MyDrive playsRole mydrive{
    multiplicity 1..*;}
    User playsRole user{
    multiplicity 1;}
}

relation MyDriveContainsDirectory{
    MyDrive playsRole mydrive{
    multiplicity 1;}
    Directory playsRole directory{
    multiplicity 1;}
}

relation MyDriveContainsFile{
    MyDrive playsRole myrive{
    multiplicity 2..*;}
    File playsRole file{
    multiplicity 1;}
    

}
